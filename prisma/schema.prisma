// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Status {
    ONLINE
    OFFLINE
    AWAY
}

model User {
    id               Int         @id @default(autoincrement())
    connection       Connection?
    avatar           Avatar?
    username         String?     @unique @db.VarChar(8)
    profileCompleted Boolean     @default(false)
    rank             Int         @default(100)
    // followed         Int[]       @db.IntegerArray
    // blocked          Int[]       @db.IntegerArray
    status           Status      @default(OFFLINE)
    won              Match[]     @relation("UserWonMatch")
    lost             Match[]     @relation("UserLostMatch")
    createdAt        DateTime    @default(now())
    updatedAt        DateTime    @updatedAt

    @@map("users")
}

model Match {
    id        Int      @id @default(autoincrement())
    // score    Int[]    @db.IntegerArray
    date      DateTime
    winner    User     @relation("UserWonMatch", fields: [winnerId], references: [id])
    winnerId  Int      @unique
    loser     User     @relation("UserLostMatch", fields: [loserId], references: [id])
    loserId   Int      @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("matches")
}

model Connection {
    id           Int      @id @default(autoincrement())
    user         User     @relation(fields: [userId], references: [id])
    userId       Int      @unique
    password     String?
    refreshToken String?
    otp          String?
    intra_42     Int?
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt

    @@map("connections")
}

model Avatar {
    id        Int      @id @default(autoincrement())
    filename  String
    data      Bytes
    user      User     @relation(fields: [userId], references: [id])
    userId    Int      @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("avatars")
}
